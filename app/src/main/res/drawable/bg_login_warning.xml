<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:pivotX="40%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <stroke
                    android:width="1dp"
                    android:color="#EDA4A6" />
                <solid android:color="#E16D71" />

                <corners android:radius="3dp" />
            </shape>
        </rotate>
    </item>
</layer-list>